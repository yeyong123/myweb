#encoding:utf-8
<% provide(:title, @title) %>
  <div class="row">
    <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "个人信息", @user %></span>
      <span><b>微博:</b><%= @user.microposts.count %></span>
    </section>
    <section>
    <%= render 'shared/stats' %>
    <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 15), user %>
        <% end %>
      </div>
    <% end %>
    </section>
    </aside>
    <div class="span6">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>

