#encoding:utf-8
<li>
  <span class="content">
    <%= micropost.content %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前
  </span>
    <% if current_user?(micropost.user) %>
      <%= link_to "删除", micropost, method: :delete,
                                     data: { confirm: "确定删除？"},
                                     title: micropost.content %>
   <% end %>                                              
</li>

